<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#472859"
    android:saveEnabled="false"
    android:clickable="true"
    tools:context="com.example.duc.mp3.DetailGenreFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_weight="1.25"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:background="#234656"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/genre_Iv"
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <RelativeLayout
                    android:background="#45000000"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <ImageView
                        android:layout_margin="10dp"
                        android:padding="1dp"
                        android:src="@drawable/ic_arrow_back_white_24px"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />
                    <ImageView
                        android:id="@+id/share_Iv"
                        android:layout_margin="10dp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/ic_share_white_24px"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />
                    <ImageView
                        android:id="@+id/favorite_Iv"
                        android:layout_toLeftOf="@id/share_Iv"
                        android:layout_margin="10dp"
                        android:src="@drawable/ic_favorite_white_24px"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        />
                    <ImageView
                        android:layout_margin="10dp"
                        android:layout_toLeftOf="@id/favorite_Iv"
                        android:src="@drawable/ic_search_white_24px"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />

                </RelativeLayout>

            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_weight="4"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:textColor="#FFFFFF"
                        android:layout_marginLeft="20dp"
                        android:textSize="20dp"
                        android:id="@+id/name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textColor="#FFFFFF"
                        android:layout_marginLeft="20dp"
                        android:text="50 song"
                        android:layout_alignParentBottom="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/top_song_Rv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </android.support.v7.widget.RecyclerView>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</FrameLayout>
